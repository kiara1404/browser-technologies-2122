<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
<section>
    <form method="POST" action="/wafs">
        <fieldset>
            <%- include('../includes/error.ejs') %>
            <legend>
                <h2>Persoonlijke gegevens</h2>
            </legend>
            <div class="group">
                <label for="name">Naam</label>
                <input type="text" id="name" name="name" title="naam" value="<%= student ? student.name : '' %>"
                    required/>
            </div>
            <div class="group">
                <label for="studentId">Studentennummer</label>
                <input type="number" id="studentId" name="studentId" placeholder="500405044"
                    value="<%= student ? student.studentId : '' %>" minlength="4" required/>
            </div>

        </fieldset>
        <button type="submit" value="submit">Volgende </button>
    </form>
</section>
<%- include('../includes/footer.ejs') %>